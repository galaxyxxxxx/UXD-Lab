.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

van-icon{
  vertical-align: middle;
}

page {
  background: #ffffff;
  background-size: auto 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  
  --font-size-XL : 70rpx;
  --font-size-L : 50rpx;
  --font-size-M: 35rpx;
  --font-size-S: 25rpx;
  --font-size-XS: 20rpx;
  font-family: Helvetica;

  --color-theme: #3D78FF;
  --color-theme2: rgba(222,229,247, 0.7);
  --color-theme-background: #5a9cde7a;

  --color-background: #f7f7f77e;
  --color-link: rgb(52, 120, 243);

  letter-spacing: 1rpx;
}
