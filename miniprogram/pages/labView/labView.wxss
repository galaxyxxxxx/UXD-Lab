page{
  display: flex;
  justify-content: center;
  align-items: center;
}
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  font-size: var(--font-size-S);
  overflow: hidden; 
  color: rgba(102, 102, 102, 0.9);
  /* border-radius: 20rpx; */
  /* box-shadow: 10px 10px 20px rgba(56, 91, 206, 0.1);  */
}



/* 标题 */
.title{
  width: 80%;
  text-align: center;
  font-weight: bold;
  font-size: var(--font-size-L);
  line-height: 1rem;
  padding: 20rpx 0;
  margin: 10rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, .15);
}

/* 时间部分 */
.date{
  width: 80%;
  height: 20%;
  display: block;
  font-weight: bold;
  margin: 20rpx 0;
}

.dateTitle{
  font-size: var(--font-size-M);
  margin: 0 0 20rpx 0;
  font-weight: 600;
}

/* 日期选择部分 */
.datePicker{
  display: block;
  height: 35%;
}
.dateValue{
  padding: 0 20rpx;
  border-radius: 10rpx;
  border: 3rpx solid rgba(0, 0, 0, .15);
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
}
.dateValue:active{
  box-shadow: 0 0 3px rgba(4, 0, 248, 0.5)
}

/* 时分选择部分 */
.timePicker{
  display: flex;
  justify-content: space-between;
  /* background-color: rgba(240, 248, 255, 0.226); */
}
.timePicker .dateValue{
  width: 40%;
  border: 3rpx solid rgba(0, 0, 0, .15);
}
.timePicker .dateValue:active{
  box-shadow: 0 0 3px rgba(4, 0, 248, 0.5)
}

/* 发起人 */
.host{
  width: 80%;
  display: block;
  font-weight: bold;
  margin: 20rpx 0;
}
.hostTitle{
  font-size: var(--font-size-M);
  font-weight: 600;
  margin-bottom: 20rpx;
}
.hostContent{
  display: flex;
  align-items: center;
}

.avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-size: auto 100%;
}
.hostName{
  font-weight: 400;
  font-size: var(--font-size-M);
  margin-left: 24rpx;
}