page{
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container{
  width: 100%;
  height: calc(100vh);
  display: flex;
  position: fixed;
  flex-direction: column;
  font-size: var(--font-size-S);
  overflow: hidden; 
  color: rgba(102, 102, 102, 0.9);
  background: #fff;
  /* border-radius: 20rpx; */
  /* box-shadow: 10px 10px 20px rgba(56, 91, 206, 0.1);  */
}



/* 标题 */
.title{
  width: 80%;
  text-align: center;
  /* font-weight: bold; */
  font-size: 35rpx;
  line-height: 1rem;
  padding: 20rpx 0;
  margin: 50rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, .15);
}

/* 时间部分 */
.date{
  width: 80%;
  height: 20%;
  display: block;
  font-weight: bold;
  margin: 50rpx 0;
}

.dateTitle{
  font-size: var(--font-size-M);
  margin: 0 0 20rpx 0;
  font-weight: 600;
}

.dateContent{
  line-height: 1.5rem;
  opacity: 0.5;
  font-size: 30rpx;
}

/* 发起人 */
.host{
  width: 80%;
  display: block;
  font-weight: bold;
  margin: 20rpx 0;
}
.hostTitle{
  font-size: 35rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.hostName{
  font-size: 30rpx;
  margin-left: 24rpx;
  opacity: 0.5;
}
.hostContent{
  display: flex;
  align-items: center;
}

.avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-size: auto 100%;
}
