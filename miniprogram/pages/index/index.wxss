page{
  font-size: var(--font-size-S);
  
  background :linear-gradient(#3C77FF,#00C2FF,#00C2FF, #00C2FF);
  height: 100%;
}

.container{
  height: calc(100vh)
}


/* 授权页 */
.authrization{

  width: 100%;
  height: 100vh;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}
.authMain{
  /* background-color: rgba(255, 255, 255, 0.2); */
  border-radius: 25rpx;
  padding: 30rpx;
  position: relative;
  top: -100rpx;
}
.header{
  position: relative;
  left: 30rpx;
}
.content{
  margin: 50rpx 0;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
}
.loginBtn{
  width: calc(80vw);
  border-radius: 50rpx;
  background-color: #fff;
  color: #00aeff;
}

/* 顶部个人信息 高10%*/

.userinfo{
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #f0f0f1;
  border-radius: 8rpx;
  width: calc(94vw);
  height: calc(15vh);
  /* background-color: rgba(236, 236, 236, 0.185); */
}
.hello{
  line-height: 50rpx;
  font-size: 28rpx;
}
.today{
  font-size: 52rpx;
  line-height: 70rpx;
  /* color: rgb(99, 99, 99); */
  font-weight: bold;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 20rpx 0;
  border: 1px solid rgb(99, 99, 99, 0.1);
}
.nickname{
  margin-left: 20rpx;
}

/* 主体 */
.main {
  width: 100%;
  /* overflow: scroll; */
  top:  calc(15vh);
  height: calc(85vh);
  
  /* display: flex;
  flex-direction: row;
  justify-content: left; */
  /* background : rgba(224, 212, 212, 0.404); */
}

/* 时间线 */
.timeline{
  margin-top: calc(5vh);
  width: calc(10vw);
  height: calc(80vh);

  float: left;
  display: flex;
  flex-direction: column;
  align-content: center;

  background-color: #f9f9fa;
  color: rgb(99, 99, 99);
}
.hourpoint{
  height: calc(8vh);
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.6;
}

/* 滚动区域 width90%*/
.scroll{
  /* float: auto; */
  display: flex;
  height: calc(85vh);
  width: calc(90vw);
  overflow: hidden;
}
/* 一列 */
.day{
  /* flex: 1; */
  min-width: calc(30vw);
  height: calc(90vh);
  display: flex;
  flex-direction: column;
  background: url('data:image/svg+xml;base64,');
  background-position-y: calc(5vh);
  background-position-x: -5px;
  background-size: auto calc(80vh);
  background-repeat: no-repeat;
  /* border-left: 1rpx solid #0f0f13; */
}
/* 日期 */
.date{
  height:calc(5vh);
  text-align: center;  
  font-size: 28rpx;
  color: #fff;
  line-height: calc(5vh);
  font-weight: bold;
}

/* 活动 */
.lab{
  display: block;
  flex-direction: column;
  width: calc(30vw - 50rpx);
  position: absolute;
  padding: 0 18rpx;
  border: 2rpx solid #3d77ff34;
  background-color: var(--color-theme2);
  border-radius: 8rpx;
  color: var(--color-theme);
  line-height: 50rpx;
  margin-left: 16rpx;
}

.lab:active{
  opacity: 0.6;
  transform: scale(1.02);
  border: 2rpx solid #3D78FF;
}

.titleMini{
  /* margin-top: 10rpx; */
  font-weight: bold;
  line-height: 30rpx;
  font-size: 28rpx;
}

.title{
  margin-top: 16rpx;
  font-weight: bold;
  line-height: 30rpx;
  font-size: 28rpx;
}

.time{
  font-size: var(--font-size-S);
}

.add{
  width: 100rpx;
  height: 100rpx;

  z-index: 1;
  position: fixed;
  right: 50rpx;
  bottom: 80rpx;

  border-radius: 50%;
  
}

.history{
  width: 100rpx;
  text-align: center;
  position: fixed;
  left: 0;
  top: 350rpx;
  color: #fff;
  /* background-color: green; */
  z-index: 2;
}