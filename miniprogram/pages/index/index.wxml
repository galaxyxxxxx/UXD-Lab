<view class="authrization" wx:if="{{isHide}}">
  <view class="authMain" wx:if="{{canIUse}}">
    <view class='header'>
      <image src='../../image/conservation.svg'></image>
    </view>

    <view class='content'>
      <view class="applyTitle">申请获取以下权限</view>
      <text>获得你的公开信息(昵称，头像等)</text>
    </view>

    <button class='loginBtn' open-type="getUserInfo" lang="zh_CN"
      bindgetuserinfo="bindGetUserInfo">
      授权登录
    </button>
  </view>
  <view wx:else>请升级微信版本</view>
</view>

<view class="container" wx:else>
  <!-- 头部 个人信息 -->
  <view class="userinfo">
    <view class="left">

      <view class="today">{{today.date}}</view>
      <view class="hello">欢迎, {{nickName}}!</view>


    </view>
    <view class="avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
  </view>


  <view class="main">
    <!-- 左侧时间线 -->
    <view class="timeline">
      <block wx:for="{{hourpoint}}">
        <view class="hourpoint">{{item}}:00 </view>
      </block>
    </view>
    <!-- 右侧主体 -->
    <scroll-view class="scroll" scroll-x="true" enable-flex="true" scroll-anchoring="true" bounces="false">
      <!-- 某一天的活动 -->
      <view class="day" wx:for="{{days}}" wx:key="id">
        <!-- 日期 -->
        <view class="date">{{item.date}}</view>
        <!-- 活动 -->
        <view wx:for="{{item.labs}}" wx:for-item="lab" wx:key="id">
          <view class="lab" data-id="{{lab._id}}"
            style="top:{{height * (9 + lab.top * 2) * 0.01}}px; height: {{lab.duration * height * 0.01 * 8}}px " bindtap="handleLab"
            bindlongpress="delete">
            <view class="titleMini" wx:if="{{lab.duration <= 0.25}}">{{lab.title}}</view>
            <view class="title" wx:if="{{lab.duration > 0.25}}">{{lab.title}}</view>
            <view class="time" wx:if="{{lab.duration >= 1}}">
              <!-- <van-icon name="clock-o" size="13px" color="#3D78FF" custom-style="margin-right:0rpx;line-height:25rpx" /> -->
              {{lab.timeBegin}}-{{lab.timeEnd}}</view>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
  <view class="add" bindtap="addLab">+</view>
  <van-dialog id="van-dialog" />
  <!-- <view class="history">历史</view> -->
</view>